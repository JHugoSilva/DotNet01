
@{
    ViewBag.Title = "novaDisciplina";
}

<h2>novaDisciplina</h2>

<form method="POST" action="@Url.Action("novaDisciplina", "Disciplina")">
    <fieldset>
        <legend>Nova Disciplina</legend>
        @if (!string.IsNullOrEmpty(ViewBag.sucesso)) { 
            <div class="alert alert-success">
                <strong>Sucesso !</strong> Disciplina Inserida com Sucesso.
            </div>
        }
        <div>
            <label for="Nome">Nome</label>
        </div>
        <div>
            <input type="text" id="Nome" name="Nome" />
        </div>
        <div>
            <label for="Semestre">Semestre</label>
        </div>
        <div>
            <input type="text" id="Semestre" name="Semestre" />
        </div>
        <div>
            <label for="Curso">Curso</label>
        </div>
        <div>
            <input type="text" id="Curso" name="Curso" />
        </div>
        <br />
        <input type="submit" class="btn btn-default" value="Cadastrar Disciplina"/>
    </fieldset>
</form>

